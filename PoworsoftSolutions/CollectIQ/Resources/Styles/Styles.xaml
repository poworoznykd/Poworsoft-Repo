    <Style x:Key="AccentButton" TargetType="Button">
        <Setter Property="TextColor" Value="#BFFFFF" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="CornerRadius" Value="14" />
        <Setter Property="Padding" Value="22,12" />
        <Setter Property="Background">
            <Setter.Value>
                <RadialGradientBrush Center="0.5,0.5" Radius="0.8">
                    <GradientStop Color="#003366" Offset="0.0" />
                    <GradientStop Color="#001020" Offset="1.0" />
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#00C6FF"
                    Radius="22"
                    Opacity="0.85"
                    Offset="0,6" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Aurora Blue Accent Button -->
    <Style x:Key="AccentButton_AuroraBlue"
               TargetType="Button">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="14" />
        <Setter Property="HeightRequest" Value="54" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,1">
                    <GradientStop Color="#00B4D8" Offset="0.0" />
                    <GradientStop Color="#0077B6" Offset="1.0" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#00B4D880" Radius="15" Offset="0,4" />
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>
