<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectIQ.MainPage"
             Shell.NavBarIsVisible="False">

    <Grid>
        <!-- Proper gradient syntax -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#011219" Offset="0.0" />
                <GradientStop Color="#054d68" Offset="0.5" />
                <GradientStop Color="#0ab8f9" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollView>
            <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center"
        Padding="20"
        Spacing="30">

                <!-- App Logo (put this file in Resources/Images/collectiq_logo.png) -->
                <Image Source="collectiq_logo.png"
               HeightRequest="160"
               WidthRequest="160"
               Aspect="AspectFit"/>

                <!-- App Title -->
                <Label Text="CollectIQ"
               FontSize="40"
               TextColor="White"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

                <!-- Subtitle (escape the ampersand!) -->
                <Label Text="Track, Grade &amp; Trade Smarter"
               FontSize="18"
               TextColor="#DFF6FF"
               HorizontalOptions="Center"/>

                <!-- Start Button -->
                <Button Text="Get Started"
                FontSize="20"
                BackgroundColor="#4895EF"
                TextColor="White"
                CornerRadius="12"
                WidthRequest="200"
                HeightRequest="50"
                Clicked="OnGetStartedClicked"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
