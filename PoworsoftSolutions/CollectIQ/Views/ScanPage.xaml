<!--
* FILE: ScanPage.xaml
* PROJECT: CollectIQ (Mobile Application)
* PROGRAMMER: Darryl Poworoznyk
* FIRST VERSION: 2025-10-25
* DESCRIPTION:
*     Provides the UI for capturing and recognizing collectible cards.
*     Features an Aurora Blue futuristic interface, live camera preview,
*     and a scanning overlay animation for recognition feedback.
-->

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CollectIQ.Views.ScanPage"
             Title="Scan Card"
             BackgroundColor="#0B0E11">

    <VerticalStackLayout Padding="24" Spacing="24">

        <!-- Header -->
        <Label Text="Scan Your Card"
               FontSize="30"
               FontAttributes="Bold"
               TextColor="#6CD4FF"
               HorizontalOptions="Center"
               Margin="0,10,0,4" />

        <BoxView HeightRequest="2"
                 WidthRequest="120"
                 Color="#00B4D8"
                 HorizontalOptions="Center"
                 CornerRadius="1" />

        <!-- Card Preview Frame -->
        <Frame CornerRadius="18"
               Padding="0"
               HeightRequest="260"
               BackgroundColor="#14181C"
               BorderColor="#1A87B9"
               HasShadow="True"
               HorizontalOptions="Center"
               VerticalOptions="Center">

            <Grid>
                <!-- Image Preview -->
                <Image x:Name="PreviewImage"
                       Aspect="AspectFill"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"
                       Opacity="0.9" />

                <!-- Placeholder when no image exists -->
                <Label Text="No Image Captured"
                       FontSize="14"
                       TextColor="#555"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       IsVisible="{Binding Source={x:Reference PreviewImage}, Path=Source, Converter={toolkit:IsNullConverter}}" />

                <!-- Scanning Overlay -->
                <Grid x:Name="ScanOverlay"
                      BackgroundColor="#00000060"
                      IsVisible="False"
                      HorizontalOptions="Fill"
                      VerticalOptions="Fill">
                    <BoxView x:Name="ScanLine"
                             HeightRequest="3"
                             HorizontalOptions="Fill"
                             Color="#00B4D8"
                             Opacity="0.8"
                             Margin="0,0,0,0"
                             TranslationY="0" />
                </Grid>
            </Grid>
        </Frame>

        <!-- Scan Button -->
        <Frame CornerRadius="14"
               Padding="0"
               HasShadow="False"
               BackgroundColor="Transparent"
               HorizontalOptions="Fill">
            <Button Text="ðŸ“¸  Scan Card"
                    FontSize="18"
                    FontAttributes="Bold"
                    TextColor="White"
                    CornerRadius="14"
                    HeightRequest="54"
                    Command="{Binding ScanCommand}">
                <!-- Proper gradient brush syntax -->
                <Button.Background>
                    <LinearGradientBrush EndPoint="1,1">
                        <GradientStop Color="#00B4D8" Offset="0.0" />
                        <GradientStop Color="#0077B6" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>

                <Button.Shadow>
                    <Shadow Brush="#00B4D880" Radius="15" Offset="0,4" />
                </Button.Shadow>
            </Button>
        </Frame>

        <!-- Recognition Result -->
        <Frame CornerRadius="14"
               Padding="18"
               BackgroundColor="#101417"
               BorderColor="#1A87B9"
               HasShadow="True"
               Margin="0,10,0,0">
            <Label x:Name="ResultLabel"
                   Text="Awaiting scan..."
                   FontSize="16"
                   TextColor="#B0C4DE"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />
        </Frame>

    </VerticalStackLayout>
</ContentPage>
