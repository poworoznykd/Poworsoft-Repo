<!--
* FILE: ScanPage.xaml
* PROJECT: CollectIQ (Mobile Application)
* PROGRAMMER: Darryl Poworoznyk
* FIRST VERSION: 2025-10-25
* DESCRIPTION:
*     Provides camera capture interface for scanning sports cards.
*     Displays a vertical card-shaped overlay and live preview.
-->

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CollectIQ.Views.ScanPage"
             Title="Scan Card"
             BackgroundColor="#0B0E11">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="24">

            <!-- Header -->
            <Label Text="Scan Your Card"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#6CD4FF"
                   HorizontalOptions="Center" />

            <!-- Camera Frame (portrait ratio) -->
            <Frame CornerRadius="18"
                   HeightRequest="380"
                   WidthRequest="260"
                   BackgroundColor="#14181C"
                   BorderColor="#00B4D8"
                   HasShadow="True"
                   HorizontalOptions="Center"
                   VerticalOptions="Center">

                <Grid>
                    <!-- Card Preview Image -->
                    <Image x:Name="PreviewImage"
                           Aspect="AspectFill"
                           HorizontalOptions="Fill"
                           VerticalOptions="Fill" />

                    <!-- Neon overlay frame -->
                    <Frame BackgroundColor="#2200B4D8"
                           CornerRadius="18"
                           HasShadow="False"
                           BorderColor="#00B4D8"
                           Padding="0"
                           IsEnabled="False"
                           InputTransparent="True"
                           HorizontalOptions="Fill"
                           VerticalOptions="Fill"
                           Margin="4"/>
                </Grid>
            </Frame>

            <!-- Controls -->
            <StackLayout Spacing="12"
                         HorizontalOptions="Center"
                         VerticalOptions="End">
                <Button Text="ðŸ“¸  Scan Card"
                        Style="{StaticResource AccentButton_AuroraBlue}"
                        WidthRequest="240"
                        HeightRequest="54"
                        FontAttributes="Bold"
                        Command="{Binding ScanCommand}" />

                <Label x:Name="ResultLabel"
                       Text=""
                       FontSize="16"
                       TextColor="#B0C4DE"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       LineBreakMode="TailTruncation"
                       MaxLines="2" />
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
