<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectIQ.Views.DashboardPage"
             Title="Dashboard"
             BackgroundColor="{StaticResource OffBlack}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">

            <!-- Header -->
            <Label Text="Welcome to CollectIQ"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Secondary}"
                   HorizontalOptions="Center" />

            <Label Text="Your Sports Card Analytics Hub"
                   FontSize="16"
                   TextColor="{StaticResource SecondaryDarkText}"
                   HorizontalOptions="Center" />

            <!-- Summary Cards -->
            <Grid ColumnDefinitions="*,*" RowSpacing="16" ColumnSpacing="16" Margin="0,20,0,0">
                <!-- Collection Value -->
                <Frame CornerRadius="14" Padding="18"
                       BackgroundColor="{StaticResource PrimaryDark}"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Total Collection Value"
                               TextColor="{StaticResource SecondaryDarkText}"
                               FontSize="13" />
                        <Label Text="$24,350"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Secondary}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Cards Owned -->
                <Frame Grid.Column="1" CornerRadius="14" Padding="18"
                       BackgroundColor="{StaticResource PrimaryDark}"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Total Cards"
                               TextColor="{StaticResource SecondaryDarkText}"
                               FontSize="13" />
                        <Label Text="342"
                               FontSize="22"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Secondary}" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Market Section -->
            <Label Text="Market Insights"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Secondary}"
                   Margin="0,20,0,6" />

            <Frame CornerRadius="14"
                   Padding="18"
                   BackgroundColor="{StaticResource PrimaryDark}">
                <VerticalStackLayout>
                    <Label Text="Recent eBay Sales"
                           FontSize="14"
                           TextColor="{StaticResource SecondaryDarkText}" />
                    <BoxView HeightRequest="1" BackgroundColor="{StaticResource Gray600}" Margin="0,8,0,8"/>
                    <Label Text="• 2020 Justin Herbert RC – Sold $280" TextColor="{StaticResource White}" />
                    <Label Text="• 2019 Zion Williamson Prizm – Sold $220" TextColor="{StaticResource White}" />
                    <Label Text="• 2021 Trevor Lawrence Auto – Sold $460" TextColor="{StaticResource White}" />
                </VerticalStackLayout>
            </Frame>

            <!-- Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="16" Margin="0,24,0,0">
                <Button Text="Add Card"
                        Style="{StaticResource AccentButton}"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Command="{Binding AddCardCommand}" />

                <Button Text="View Inventory"
                        Style="{StaticResource AccentButton}"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Command="{Binding ViewInventoryCommand}"/>
         
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
