<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectIQ.Views.DashboardPage"
             Title="Dashboard"
             BackgroundColor="{StaticResource OffBlack}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- HEADER -->
            <VerticalStackLayout Spacing="4" Margin="0,10,0,20">
                <Label Text="CollectIQ"
                       FontSize="34"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource Secondary}" />
                <Label Text="Your Digital Card Vault"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource SecondaryDarkText}" />
            </VerticalStackLayout>

            <!-- CARD STATS -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                <Frame CornerRadius="16" BackgroundColor="{StaticResource PrimaryDark}" Padding="18" HasShadow="True">
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label Text="Cards Owned" FontSize="13" TextColor="{StaticResource SecondaryDarkText}" />
                        <Label Text="342" FontSize="26" FontAttributes="Bold" TextColor="{StaticResource Secondary}" />
                    </VerticalStackLayout>
                </Frame>

                <Frame CornerRadius="16" BackgroundColor="{StaticResource PrimaryDark}" Padding="18" HasShadow="True" Grid.Column="1">
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label Text="Est. Collection Value" FontSize="13" TextColor="{StaticResource SecondaryDarkText}" />
                        <Label Text="$24,350" FontSize="26" FontAttributes="Bold" TextColor="{StaticResource Secondary}" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- ACTION CENTER -->
            <Label Text="Action Center"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Secondary}"
                   Margin="0,25,0,6" />

            <Grid RowDefinitions="Auto,Auto"
                  ColumnDefinitions="*,*"
                  ColumnSpacing="16"
                  RowSpacing="16">

                <!-- Scan Card -->
                <Button Text="Scan Card"
                        Style="{StaticResource AccentButton}"
                        FontAttributes="Bold"
                        HeightRequest="60"
                        Command="{Binding ScanCardCommand}"
                        Grid.Row="0" Grid.Column="0" />

                <!-- eBay Compare -->
                <Button Text="Compare on eBay"
                        Style="{StaticResource AccentButton}"
                        FontAttributes="Bold"
                        HeightRequest="60"
                        Command="{Binding EbayCompareCommand}"
                        Grid.Row="0" Grid.Column="1" />

                <!-- My Collection -->
                <Button Text="My Collection"
                        Style="{StaticResource AccentButton}"
                        FontAttributes="Bold"
                        HeightRequest="60"
                        Command="{Binding ViewCollectionCommand}"
                        Grid.Row="1" Grid.Column="0"
                        Grid.ColumnSpan="2" />
            </Grid>

            <!-- FUTURE MODULE PLACEHOLDER -->
            <Frame Margin="0,30,0,0"
                   CornerRadius="20"
                   BackgroundColor="{StaticResource PrimaryDark}"
                   HasShadow="True"
                   Padding="24">
                <VerticalStackLayout Spacing="8">
                    <Label Text="Coming Soon"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource Secondary}" />
                    <Label Text="AI Vision will let you identify, grade, and authenticate cards instantly from a scan."
                           TextColor="{StaticResource SecondaryDarkText}"
                           FontSize="14"
                           LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
