<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectIQ.Views.LandingPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#0B0B0D">

    <VerticalStackLayout Spacing="20" Padding="32"
                       VerticalOptions="Center" HorizontalOptions="Center">

        <!-- Logo (shows if present; if not, other elements still prove UI) -->
        <Image x:Name="LogoImage"
           Source="collectiq_logo.png"
           HeightRequest="140" WidthRequest="140"
           Aspect="AspectFit" />

        <Label x:Name="TitleLabel"
           Text="CollectIQ"
           FontSize="34"
           FontAttributes="Bold"
           TextColor="White"
           HorizontalTextAlignment="Center" />

        <Label x:Name="SubtitleLabel"
           Text="Scan • Track • Predict • Trade"
           FontSize="18"
           TextColor="#DDDDDD"
           HorizontalTextAlignment="Center" />

        <Button x:Name="EnterButton"
            Text="Get Started"
            Clicked="OnEnter"
            HeightRequest="52" WidthRequest="220"
            CornerRadius="12"
            BackgroundColor="#2B0B98"
            TextColor="White" />
    </VerticalStackLayout>
</ContentPage>
