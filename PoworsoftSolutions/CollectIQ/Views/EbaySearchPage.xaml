<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="CollectIQ.Views.EbaySearchPage"
    BackgroundColor="{StaticResource PageBackgroundColor}"
    Title="eBay Search">

    <VerticalStackLayout Padding="16" Spacing="12">

        <!-- Header -->
        <Label Text="eBay Card Search"
               Style="{StaticResource HeaderStyle}"
               HorizontalOptions="Center" />

        <!-- OCR / Manual Search Input -->
        <Entry x:Name="ManualSearchBox"
               Placeholder="Enter or edit card text here..."
               Style="{StaticResource EntryStyle}"
               ClearButtonVisibility="WhileEditing" />

        <!-- Search Button -->
        <Button Text="Search eBay"
                Clicked="OnManualSearchClicked"
                BackgroundColor="{StaticResource PrimaryColor}"
                TextColor="White"
                CornerRadius="10"
                FontAttributes="Bold"
                HeightRequest="44" />

        <!-- Divider -->
        <BoxView HeightRequest="1"
                 BackgroundColor="{StaticResource DividerColor}" />

        <!-- Results -->
        <CollectionView x:Name="EbayResultsView"
                        SelectionMode="Single"
                        SelectionChanged="OnResultSelected"
                        ItemsSource="{Binding Listings}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"
                                   ItemSpacing="8" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="2"
                           Padding="8"
                           CornerRadius="10"
                           BorderColor="{StaticResource PrimaryColor}"
                           BackgroundColor="{StaticResource CardBackgroundColor}"
                           HasShadow="True">

                        <Grid ColumnDefinitions="Auto,*"
                              ColumnSpacing="12"
                              RowDefinitions="Auto,Auto">

                            <!-- Card Image -->
                            <Image Grid.RowSpan="2"
                                   Source="{Binding ImageUrl}"
                                   WidthRequest="80"
                                   HeightRequest="80"
                                   Aspect="AspectFill"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center" />

                            <!-- Title -->
                            <Label Grid.Column="1"
                                   Text="{Binding Title}"
                                   Style="{StaticResource CardTitleStyle}"
                                   TextColor="{StaticResource PrimaryTextColor}"
                                   LineBreakMode="WordWrap"
                                   FontSize="Medium" />

                            <!-- Price -->
                            <Label Grid.Column="1"
                                   Grid.Row="1"
                                   Text="{Binding Price, StringFormat='${0:F2}'}"
                                   FontAttributes="Bold"
                                   FontSize="Small"
                                   TextColor="{StaticResource AccentColor}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Empty State -->
        <Label x:Name="EmptyMessage"
               Text="No cards found."
               IsVisible="False"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               TextColor="{StaticResource SecondaryTextColor}" />

    </VerticalStackLayout>
</ContentPage>
