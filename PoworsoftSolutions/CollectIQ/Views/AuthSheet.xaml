<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectIQ.Views.AuthSheet"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Transparent">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#2B0B98" Offset="0.0" />
                <GradientStop Color="#512BD4" Offset="0.5" />
                <GradientStop Color="#7C3AED" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollView>
            <VerticalStackLayout Padding="30,40,30,40" Spacing="14"
                                 VerticalOptions="Center" HorizontalOptions="Center">

                <Image Source="collectiq_logo.png"
                       HeightRequest="100"
                       WidthRequest="100"
                       HorizontalOptions="Center"/>

                <Label Text="Create Account or Sign In"
                       FontSize="22"
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       Margin="0,10"/>

                <Entry x:Name="EmailEntry"
                       Placeholder="Email"
                       PlaceholderColor="#A0A0A0"
                       TextColor="White"
                       Keyboard="Email"
                       HeightRequest="44"
                       BackgroundColor="#1E1E1E"/>

                <Entry x:Name="PasswordEntry"
                       Placeholder="Password"
                       PlaceholderColor="#A0A0A0"
                       TextColor="White"
                       IsPassword="True"
                       HeightRequest="44"
                       BackgroundColor="#1E1E1E"
                       TextChanged="OnPasswordChanged"/>

                <GraphicsView x:Name="StrengthMeterView"
                              HeightRequest="50"
                              WidthRequest="200"
                              HorizontalOptions="Center"/>

                <Entry x:Name="ConfirmPasswordEntry"
                       Placeholder="Confirm Password"
                       PlaceholderColor="#A0A0A0"
                       TextColor="White"
                       IsPassword="True"
                       HeightRequest="44"
                       BackgroundColor="#1E1E1E"/>

                <Button Text="Register"
                        Clicked="OnRegister"
                        BackgroundColor="#7C3AED"
                        TextColor="White"
                        HeightRequest="50"
                        CornerRadius="14"/>

                <Button Text="Login"
                        Clicked="OnLogin"
                        BackgroundColor="#4895EF"
                        TextColor="White"
                        HeightRequest="50"
                        CornerRadius="14"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
