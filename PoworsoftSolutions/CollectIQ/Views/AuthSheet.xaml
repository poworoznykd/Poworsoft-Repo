<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectIQ.Views.AuthSheet"
             Shell.NavBarIsVisible="True"
             Shell.TitleColor="#0ab8f9"
             Shell.BackgroundColor="{StaticResource OffBlack}">

    <Grid>
        <!-- Gradient background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#011219" Offset="0.5" />
                <GradientStop Color="#054d68" Offset="0.85" />
                <GradientStop Color="#0ab8f9" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Layout centered vertically -->
        <VerticalStackLayout Padding="30,50,30,40"
                             Spacing="18"
                             VerticalOptions="Center"
                             HorizontalOptions="Center">

            <!-- Title -->
            <Label Text="Create Account or Sign In"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center" />

            <Label Text="Enter your details below"
                   FontSize="14"
                   TextColor="#E0E0E0"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,20" />

            <!-- Email -->
            <Entry x:Name="EmailEntry"
                   Placeholder="Email"
                   PlaceholderColor="#B0B0B0"
                   TextColor="White"
                   Keyboard="Email"
                   HeightRequest="44"
                   BackgroundColor="#1E1E1E"
                   Margin="0,0,0,8" />

            <!-- Password -->
            <Entry x:Name="PasswordEntry"
                   Placeholder="Password"
                   PlaceholderColor="#B0B0B0"
                   TextColor="White"
                   IsPassword="True"
                   HeightRequest="44"
                   BackgroundColor="#1E1E1E"
                   TextChanged="OnPasswordChanged"
                   Margin="0,0,0,12" />

            <!-- Password Strength Meter -->
            <GraphicsView x:Name="StrengthMeterView"
                          HeightRequest="55"
                          WidthRequest="130"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"
                          Margin="0,20,0,8" />

            <!-- Confirm Password -->
            <Entry x:Name="ConfirmPasswordEntry"
                   Placeholder="Confirm Password"
                   PlaceholderColor="#B0B0B0"
                   TextColor="White"
                   IsPassword="True"
                   HeightRequest="44"
                   BackgroundColor="#1E1E1E"
                   Margin="0,20,0,25" />

            <!-- Register -->
            <Button x:Name="RegisterButton"
                       BorderWidth="2"
                    Style="{StaticResource AccentButton}"
                    BorderColor="LightSeaGreen"
                    Text="Register"
                    Clicked="OnRegister"
                    HeightRequest="50"
                    CornerRadius="14"
                    BackgroundColor="#0ab8f9"
                    TextColor="White"
                    FontAttributes="Bold"
                    Margin="0,0,0,12"/>

            <!-- Login -->
            <Button x:Name="LoginButton"
                    Style="{StaticResource AccentButton}"
                       BorderWidth="2"
                    BorderColor="LightSeaGreen"
                    Text="Login"
                    Clicked="OnLogin"
                    HeightRequest="50"
                    CornerRadius="14"
                    BackgroundColor="#0ab8f9"
                    TextColor="White"
                    FontAttributes="Bold"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
