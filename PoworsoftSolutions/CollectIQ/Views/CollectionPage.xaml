<!--
* FILE: CollectionPage.xaml
* PROJECT: CollectIQ (Mobile Application)
* PROGRAMMER: Darryl Poworoznyk
* FIRST VERSION: 2025-10-25
* DESCRIPTION:
*     Displays the user's saved sports card collection using
*     a scrollable CollectionView bound to local SQLite data.
*     The layout uses a Grid for fixed header and footer placement
*     while the CollectionView expands and scrolls independently.
*     Uses an Aurora Blue gradient for the Add New Card button.
-->

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectIQ.Views.CollectionPage"
             Title="My Collection"
             BackgroundColor="#0B0E11">

    <!-- Grid ensures the CollectionView can scroll independently -->
    <Grid RowDefinitions="Auto,*,Auto"
          Padding="20"
          RowSpacing="18">

        <!-- HEADER SECTION -->
        <VerticalStackLayout Grid.Row="0" Spacing="8" HorizontalOptions="Center">
            <Label Text="My Card Collection"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#6CD4FF"
                   HorizontalOptions="Center" />
            <BoxView HeightRequest="2"
                     WidthRequest="140"
                     Color="#00B4D8"
                     HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!-- SCROLLABLE CARD COLLECTION -->
        <CollectionView x:Name="CardsCollectionView"
                        Grid.Row="1"
                        ItemsLayout="VerticalList"
                        VerticalScrollBarVisibility="Always"
                        SelectionMode="None"
                        Margin="0,10,0,0">

            <CollectionView.EmptyView>
                <Label x:Name="EmptyMessage"
                       Text="Your saved cards will appear here once added."
                       FontSize="16"
                       TextColor="#7C8A93"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       VerticalOptions="Center"
                       Margin="20,10" />
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BackgroundColor="#14181C"
                           CornerRadius="12"
                           BorderColor="#1A87B9"
                           Padding="14"
                           Margin="0,8,0,0"
                           HasShadow="True">

                        <Grid ColumnDefinitions="80,*,Auto"
                              RowDefinitions="Auto,Auto">

                            <!-- CARD IMAGE -->
                            <Frame Grid.RowSpan="2"
                                   Grid.Column="0"
                                   Padding="0"
                                   CornerRadius="8"
                                   HasShadow="False"
                                   BackgroundColor="#0E1115"
                                   Margin="0,0,10,0">
                                <Image Source="{Binding PhotoPath}"
                                       WidthRequest="72"
                                       HeightRequest="100"
                                       Aspect="AspectFill" />
                            </Frame>

                            <!-- CARD TITLE -->
                            <Label Grid.Column="1"
                                   Text="{Binding Name}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#B0C4DE"
                                   LineBreakMode="TailTruncation" />

                            <!-- YEAR / PLAYER -->
                            <Label Grid.Row="1"
                                   Grid.Column="1"
                                   Text="{Binding Player, StringFormat='Player: {0}'}"
                                   FontSize="14"
                                   TextColor="#7C8A93" />

                            <!-- ESTIMATED VALUE -->
                            <Label Grid.Column="2"
                                   Text="{Binding EstimatedValue, StringFormat='${0:F2}'}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#00B4D8"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- FOOTER BUTTON -->
        <Button Grid.Row="2"
                Text="âž•  Add New Card"
                FontSize="18"
                FontAttributes="Bold"
                TextColor="White"
                HeightRequest="54"
                CornerRadius="14"
                Margin="0,10,0,0">

            <Button.Background>
                <LinearGradientBrush EndPoint="1,1">
                    <GradientStop Color="#00B4D8" Offset="0.0" />
                    <GradientStop Color="#0077B6" Offset="1.0" />
                </LinearGradientBrush>
            </Button.Background>

            <Button.Shadow>
                <Shadow Brush="#00B4D880" Radius="15" Offset="0,4" />
            </Button.Shadow>
        </Button>
    </Grid>
</ContentPage>
